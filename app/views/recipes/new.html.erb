<%= render 'shared/page_title', title: "create a new recipe" %>
<% if @recipe.errors.any? %>
	<div class="row">
		<div class = "col-md-8 offset-md-2">
			<div class="alert alert-danger">
				<div class="panel-heading">
					<h3 class="card-title">
						<%= pluralize(@recipe.errors.count, "error")%>
						prohibited this <%= @recipe.class %> from being saved:
					</h3>
					<div class="panel-body">
						<ul>
							<% @recipe.errors.full_messages.each do |msg|%>
								<li><%= msg %></li>
							<% end %>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
<% end %>	

<div class="row">
	<div class="col-sm-12">
		<%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"}) do |f|%>
			<div class="form-group">
				<div class="form-control-label col-md-2">
					<%= f.label :name %>
				</div>
				<div class="col-md-8">
					<%= f.text_field :name, class: "form_control", placeholder: "Name of recipe", autofocus: true %>
				</div>
			</div>

			<div class="form-group">
				<div class="form-control-label col-md-2">
					<%= f.label :description%>
				</div>
				<div class="col-md-8">
					<%= f.text_area :description, rows: 10, class: "form_control", placeholder: "Enter steps to create recipe" %>
				</div>
			</div>
			<div class="form-group">
				<div class="offset-md-2 col-md-10">
					<%= f.submit class: "btn btn-primary btn-lg btn-xlarge" %>
				</div>
			</div>
		<% end %>		
		<div class= "col-md-4 colormatch offset-md-4">
			[ <%= link_to "Cancel request and return to recipes listing", recipes_path %> ]
		</div>

	</div>
</div>
